<!-- la bandera es al crear -->
<% if !@bandera.present? %>
<% @companies.each do |company| %>
<tr id="<%= company.id %>">
	<td>
		<span id="contenido<%= company.id %>">
			<%= company.name %>
		</span>
	</td>
	<td><%= link_to 'Detalle', company, class:'btn btn-warning' %></td>
	<td><%= link_to 'Editar', edit_company_path(company), data:{remote: true}, class:'btn btn-info' %></td>
	<td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class:'btn btn-danger' %></td>
</tr>
<% end %>

<% else  %>
<tr id="<%= @company.id %>">
	<td>
		<span id="contenido<%= @company.id %>">
			<%= @company.name %>
		</span>
	</td>
	<td><%= link_to 'Detalle', @company, class:'btn btn-warning' %></td>
	<td><%= link_to 'Editar', edit_company_path(@company), data:{remote: true}, class:'btn btn-info' %></td>
	<td><%= link_to 'Eliminar', @company, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class:'btn btn-danger' %></td>
</tr>

<% end  %>


