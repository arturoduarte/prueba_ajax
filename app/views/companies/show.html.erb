<div class="text-center">
	<p id="notice"><%= notice %></p>
	<legend><h1>Reclamos</h1></legend>
	<div class="card bg-light text-center">
		<p class="pt-2">
			<strong>Empresa:</strong>
			<span class="ml-2">
				<%= @company.name %>
			</span>
		</p>
	</div>
</div>


<div class="row">
	<div class="col-md-4 mt-4">
		<div class="well well-sm">
			<legend>Comentar:</legend>
			<%= form_with(model: [@company, Comment.new], html: { class: 'form-horizontal' }) do |f| %>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.text_area :content, placeholder: 'Escribe tu comentario aquí...', class: 'form-control' %>
				</div>
			</div>
			<%= f.submit 'Comentar', class: 'btn btn-primary' %>
			<%= link_to 'Volver', companies_path, class:'btn btn-secondary' %>
			<% end %>
			
		</div>
	</div>
	
	
	<div class="col-md-8 mt-4" id="comments">
		<% @comments.each do |comment| %>
		<div class="card bg-light mt-3 py-2 px-2" id="<%= comment.id %>">
			<strong style="color: rgb(82, 76, 76);"><%= comment.user.email %> <span class="font-weight-normal" style="float:right;">Creado hace: <%= time_ago_in_words(comment.created_at) %> </span>   </strong>

			
			
			<br>
			<div id="contenido<%= comment.id %>">
				<%= comment.content %>
			</div>
			
			
			<div class="text-right">
				<%#= link_to 'Eliminar', post_comment_path(@post,comment), method: :delete, data: { confirm: 'Estás seguro que deseas eliminar el Comentario?', remote: true }, class: 'btn btn-xs btn-danger' %>
			</div>
			
		</div>
		<% end %>
	</div>
</div>


